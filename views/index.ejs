<%- include ('partials/header') -%>

<div class="container">
    <header class="jumbotron">    
        <div class="container">
            <h1>CampGrounds Page</h1>
            <p>View our hand-picked campgrounds</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new" > Add new CampGrounds</a>
            </p>
        </div>
    </header>


    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach((camp) => { %>  
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">      
                    <img id='image' src = " <%= camp.image %>" >
                    <div class="caption">
                        <h4><%= camp.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <%});%>
</div>
<%- include ('partials/footer') -%>